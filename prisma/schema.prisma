// prisma/schema.prisma

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id       Int       @id @default(autoincrement())
    name     String
    email    String    @unique
    phone    String?
    password String?
    carts    Cart[]
    billing  Billing[]
    date     DateTime?
}

model Admin {
    id       Int       @id @default(autoincrement())
    name     String
    email    String    @unique
    phone    String?
    password String?
    passport String?
    date     DateTime?
}

model Product {
    productId      Int      @id @default(autoincrement())
    title          String
    price          Float
    overprice      Float?
    details        String?
    stockquantity  String?
    img1           String?
    img2           String?
    img3           String?
    collection     String?
    associatedWith String?
    cart           Cart[]
    date           DateTime @default(now())
}

model Cart {
    cartId    Int      @id @default(autoincrement())
    productId Int
    userId    Int
    quantity  Int
    user      User     @relation(fields: [userId], references: [id])
    product   Product  @relation(fields: [productId], references: [productId])
    createdAt DateTime @default(now())
}

model Billing {
    id            Int      @id @default(autoincrement())
    userId        Int
    firstName     String?
    lastName      String?
    state         String?
    streetAddress String?
    townCity      String?
    phoneNumber   String?
    user          User     @relation(fields: [userId], references: [id])
    createdAt     DateTime @default(now())
}

model Message {
    id      Int      @id @default(autoincrement())
    message String?
    name    String?
    email   String?
    subject String?
    date    DateTime @default(now())
}

model Feedback {
    id       Int      @id @default(autoincrement())
    content  String?
    name     String?
    position String?
    image    String?
    date     DateTime @default(now())
}

model News {
    id        Int      @id @default(autoincrement())
    headline  String?
    content1  String?  @db.Text
    content2  String?  @db.Text
    content3  String?  @db.Text
    date      String?
    image     String?
    dateAdded DateTime @default(now())
}
