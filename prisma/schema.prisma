// prisma/schema.prisma

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id       Int       @id @default(autoincrement())
    name     String
    email    String    @unique
    phone    String?
    password String?
    date     DateTime?
}

model Admin {
    id       Int       @id @default(autoincrement())
    name     String
    email    String    @unique
    phone    String?
    password String?
    passport String?
    date     DateTime?
}

model Product {
    productId      Int      @id @default(autoincrement())
    title          String
    price          Float
    overprice      Float?
    details        String?
    stockquantity  String?
    weight         String?
    img1           String?
    img2           String?
    img3           String?
    collection     String?
    associatedWith String?
    date           DateTime @default(now())
}
